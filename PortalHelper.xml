<!--  Get our standard constants -->

<include name="constants.lua"/>

<!--  Triggers  -->

<triggers>
  <trigger
   enabled="y"
   match="WHOOOOOOOOOOOOSH!"
   send_to="10"
   sequence="100"
  >
  <send>portal</send>
  </trigger>
</triggers>

<!--  Aliases  -->

<aliases>
  <alias
   match="^portal\s?(.*?)$"
   enabled="y"
   regexp="y"
   send_to="12"
   sequence="100"
  >
  <send>if "%1" ~= nil and "%1" ~= "" then
  print("Default portal is now set to: %1")
  local default_portal = "%1"
  SetVariable("default_portal", default_portal)
  Execute("wear " .. GetVariable("default_portal"))
else
  Execute("wear " .. GetVariable("default_portal"))
end</send>
  </alias>
</aliases>

<!--  Variables  -->

<variables>
  <variable name="default_portal">calling</variable>
</variables>

